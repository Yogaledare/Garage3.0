@model IEnumerable<Garage3._0.Models.ViewModels.MemberViewModel>

@{
    ViewBag.Title = "Members Index";
    Layout = "_Layout";
}

<h2>Members Index</h2>

<div class="container shadow min-vh-100 py-2">
    <div class="table-responsive">
        <table class="table accordion">
            <thead>
            <tr class="bg-secondary text-white">
                <th scope="col">First Name</th>
                <th scope="col">Surname</th>
                <th scope="col">Social Security Number</th>
                <th scope="col">Vehicle Count</th>
                <th scope="col"></th>
            </tr>
            </thead>
            <tbody>
            @foreach (var member in Model) {
                var accordionItemId = "accordionItem-" + member.MemberId;

                <!-- Parent row -->
                <tr data-bs-toggle="collapse" data-bs-target="#@accordionItemId" aria-expanded="false">
                    <td>@member.FirstName</td>
                    <td>@member.Surname</td>
                    <td>@member.SocialSecurityNr</td>
                    <td>@member.VehicleCount</td>
                    <td>
                        <i class="bi bi-chevron-down"></i> <!-- Bootstrap icon -->
                    </td>
                </tr>

                <!-- Collapsible child row for the vehicle list -->
                <tr class="collapse accordion-collapse" id="@accordionItemId" data-bs-parent=".table">
                    <td colspan="5" class="mx-0">
                        <!-- Partial view to list the vehicles -->
                        @await Html.PartialAsync("_VehicleList", member.Vehicles)
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>


